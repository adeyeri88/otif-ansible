<!-- Put site-specific property overrides in this file. -->

<configuration>
        <property>
                <name>fetcher.threads.per.queue</name>
                <value>5</value>
        </property>
        <property>
                <name>http.content.limit</name>
                <value>196608</value>
        </property>
        <property>
                <name>http.agent.name</name>
                <value>OpenText InfoFusion</value>
        </property>
        <property>
                <name>http.agent.version</name>
                <value>16.2</value>
        </property>
        <property>
                <name>db.ignore.internal.links</name>
                <value>false</value>
        </property>
        <property>
                <name>db.ignore.external.links</name>
                <value>false</value>
        </property>
        <property>
                <name>storage.data.store.class</name>
                <value>org.apache.gora.mongodb.store.MongoStore</value>
                <description>Default class for storing data</description>
        </property>
        <property>
                <name>kafka.notification.turn.on</name>
                <value>true</value>
                <description>If true, the kafka notification is turn on</description>
        </property>
        <property>
                <name>kafka.producer.conf.bootstrap.servers</name>
                <value>{{ wsm_crawler_hostname }}:9092</value>
        </property>
        <property>
                <name>kafka.producer.conf.client.id</name>
                <value>web-crawler</value>
        </property>
        <property>
                <name>kafka.topic.name</name>
                <value>TopicWebCrawler</value>
                <description>Name of topic for Kafka host</description>
        </property>
        <property>
                <name>kafka.message.job.group.name</name>
                <value>defaultJobGroupName</value>
                <description>The Kafka message job group name</description>
        </property>
        <property>
                <name>kafka.roundrobin.enabled</name>
                <value>true</value>
                <description>Enables the round-robin balancing for Kafka partitions per crawler job</description>
        </property>
        <property>
                <name>kafka.close.timeout.ms</name>
                <value>9223372036854775807</value>
                <description>The timeout for the producer to complete the sending of all incomplete requests.</description>
        </property>
</configuration>
